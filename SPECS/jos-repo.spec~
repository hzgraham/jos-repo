Name:		lcsee-cloud-storage
Version:	6.2.0
Release:	1%{?dist}
Summary:	Enables LCSEE Cloud Storage

Group:		LOCD
License:	GPLv2
URL:		https://lcsee.wvu.edu/lentos/lcsee/lcsee-cloud-storage
Source0:	lcsee-cloud-storage.tar.bz2
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)

Requires:	lcsee-myid-ldap, lcsee-cloud-config, nfs-utils, autofs


%description
Enables LCSEE Cloud Storage


%prep
%setup -q -c -n %{name}-src-base-%{version}


%build
echo "Build OK"


%install


%post
sed -i "s/#Domain = local.domain.edu/Domain = csee.wvu.edu/" /etc/idmapd.conf
sed -i "s/BROWSE_MODE=\"no\"/BROWSE_MODE=\"yes\"/" /etc/sysconfig/autofs
clear
echo "Reboot for the changes to take effect"


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)


